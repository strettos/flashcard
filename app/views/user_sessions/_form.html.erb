<%= form_tag user_sessions_path, :method => :post do %>
  <div class="form-group">
    <label for="inputEmail" class="col-lg-2 control-label"><%= label_tag :email %></label>
    <div class="col-lg-10">
        <%= text_field_tag :email %>
    </div>

  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-lg-2 control-label"><%= label_tag :password %></label>
    <div class="col-lg-10">
        <%= password_field_tag :password %>
    </div>       
  </div>
  <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= submit_tag "Login" %>
      </div>
    </div>
<% end %>