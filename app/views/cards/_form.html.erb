

    <%= form_for @card  do |f| %>
      <% if @card.errors.any? %>
        <div>
        <h2>ой, что-то случилось..</h2>
          <ul>
            <% @card.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label for="inputPassword" class="col-lg-2 control-label"><%= f.label :original_text %></label>
        <div class="col-lg-10">
          <%= f.text_field :original_text %>
        </div>
      </div>

      <div class="form-group">
        <label for="inputPassword" class="col-lg-2 control-label"><%= f.label :translated_text %></label>
        <div class="col-lg-10">
          <%= f.text_field :translated_text %>
        </div>
      </div>

      <div class="form-group">
        <label for="inputPassword" class="col-lg-2 control-label"><%= f.label :review_date %></label>
        <div class="col-lg-10 ">
          <%= date_select(:card, :review_date, start_year: Date.today.year) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit %>
        </div>
      </div>
    <% end %>

