<section>
	<h1>новая карточка</h1>
	<%= form_for :card, url: cards_path do |f| %>
		<section>
			<%= f.label :original_text %><br>
			<%= f.text_field :original_text %>
		</section>

		<section>
			<%= f.label :translated_text %><br>
			<%= f.text_field :translated_text %>
		</section>

		<section>
			<%= f.label :review_date %><br>
			<%= datetime_select(:card, :review_date, start_year: Date.today.year) %>
		</section>
		
		<section>
			<%= f.submit %>
		</section>
	<% end %>
</section>